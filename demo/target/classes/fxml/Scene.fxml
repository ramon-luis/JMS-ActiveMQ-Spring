        <Button fx:id="btnLeft" prefHeight="25" prefWidth="400" text="Send"></Button>
    </VBox>
    <VBox fx:id="vbRight" prefWidth="400" prefHeight="500">
    <ListView fx:id="lstRight" prefHeight="350" prefWidth="400"></ListView>
    <TextArea fx:id="txtAreaRight" prefHeight="125" prefWidth="400" wrapText="true"></TextArea>
        <Button fx:id="btnRight" prefHeight="25" prefWidth="400" text="Send"></Button>

    </VBox>


</HBox>